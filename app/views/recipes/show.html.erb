<h1><%= @recipe.name %></h1>
<h3><%= @recipe.category %></h3>
<h3><%= @recipe.rank %></h3>
<h3><%= @recipe.instructions %></h3>

<% if @ingredients.any? %>
<%= form_for :ingredients do |f| %>
<%= collection_select(:adsfjkl, :ingredient_id, @ingredients, :id, :name) %>
<%= f.submit 'Add Ingredient' %>
<% end %>
<% end %>

<p><%= link_to "Edit", edit_recipe_path(@recipe) %></p>
<p><%= link_to "Delete", recipe_path(@recipe), :data => {:confirm => "Are you sure?", :method => "delete"} %></p>

<p><%= link_to "Return to Recipes list", recipes_path %></p>
