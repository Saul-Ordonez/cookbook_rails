<h1>Edit Ingredient</h1>

<% if @ingredient.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @ingredient.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @ingredient do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  <%= f.submit %>
<% end %>
